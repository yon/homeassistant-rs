#!/bin/bash
set -e

echo "Running pre-commit checks..."

# Format check
echo "Checking formatting..."
cargo fmt --all -- --check

# Alphabetization check
echo "Checking alphabetization..."
./scripts/lint-alpha.py --staged

# Lint
echo "Running clippy..."
cargo clippy --workspace --all-targets -- -D warnings

# Unit tests (excluding ha-py-bridge which needs Python)
echo "Running tests..."
cargo test --workspace --exclude ha-py-bridge

echo "All pre-commit checks passed!"
